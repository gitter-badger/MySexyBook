<main id="page">
	<div class="container">
		<h1>Album {{= it.album.title }} par {{= it.user.pseudo }}</h1>
		
		{{? it.album.photos && it.album.photos.length }}
			<ul>
			{{~ it.album.photos :photo }}
				<li><img src="{{= photo.src }}" alt="" /></li>
			{{~}}
			</ul>
		{{??}}
			<p><em>{{= it.user.pseudo }}</em> n'a pas ajout√© encore de photos dans cet album</p>
		{{?}}

		{{? it.current_user && it.album.creator.equals(it.current_user._id) }}
		<form action="{{= it.app.url }}/book/{{= it.user.pseudo }}/{{= it.album._id}}" method="post" enctype="multipart/form-data">
			<fieldset>
				<legend>Ajouter une image</legend>
				<div>
					<label for="new-image-src">Fichier</label>
					<input type="file" name="image[src]" id="new-image-src" />
				</div>

				<div>
					<label for="new-image-title">Titre de l'image</label>
					<input type="text" name="image[title]" id="new-image-title" />
				</div>
			</fieldset>
			<div>
				<button type="submit">Ajouter</button>
			</div>
		</form>
		{{?}}
	</div>
</main>