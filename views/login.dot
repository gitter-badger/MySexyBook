{{= it.dots._header(it) }}
<main id="page">
	<div class="container">
		<h1>Connexion</h1>

		<form action="{{= it.app.url }}/connexion" method="post">
			{{? it.form_error }}
				<p class="alert error">{{= it.form_error }}</p>
			{{?}}
			<fieldset>
				<legend>Identifiants</legend>
				
				<div>
					<label for="login-user-email">Adresse e-mail</label>
					<input type="email" name="user[email]" id="login-user-email" required size="12" autocapitalize="off" autocorrect="off" data-emailcompleter value="{{= (it.req.body.user && it.req.body.user.email) ? it.req.body.user.email : '' }}" value="{{? it.req.body && it.req.body.user && it.req.body.user.email }}{{= it.req.body.user.email }}{{?}}" />
				</div>

				<div>
					<label for="login-user-password">Mot de passe</label>
					<input type="password" name="user[password]" id="login-user-password" required size="12" pattern="(.*){8,}" />
				</div>
			</fieldset>

			<fieldset>
				<legend>Rester connecté</legend>

				<div>
					<label>
						<input type="checkbox" name="stay_online" id="login-stay_online" value="yes" />
						<span class="checkbox-label">Je souhaite rester connecté</span>
					</label>
				</div>

				<p class="alert info">Un cookie sera créé sur votre ordinateur pour vous permettre de rester connecté jusqu'à votre prochaine visite</p>
			</fieldset>
			
			<div>
				<button type="submit">Connexion</button>
			</div>
		</form>

		<p><a href="{{= it.app.url }}/mot-de-passe-perdu">Mot de passe perdu ?</a></p>
	</div>
</main>
{{= it.dots._footer(it.extend({ js_files: ['emailcompleter'] })) }}