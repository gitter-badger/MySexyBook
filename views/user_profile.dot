<main id="page">
	<div class="container">
		<h1>Bienvenue sur le book de {{= it.user.pseudo }}</h1>

		<p>Date d'inscription : {{= it.strftime("%d %B %Y", it.user.register_date) }}</p>
		
		{{? it.albums.length }}
			<ul>
			{{~ it.albums :album }}
				<li>
					<a href="{{= it.app.url}}/book/{{= it.user.pseudo}}/{{= album._id}}">
						<h2>{{= album.title }}</h2>
						{{? album.description }}
						<blockquote>
							{{= album.description }}
						</blockquote>
						{{?}}
					</a>
				</li>
			{{~}}
			</ul>
		{{??}}
			<p><em>{{= it.user.pseudo }}</em> n'a pas encore ajouté encore de photos</p>
		{{?}}
		
		{{? it.current_user && it.user._id.equals(it.current_user._id) }}
		<p><a href="{{= it.app.url }}/mes-photos">Gérer mes photos</a></p>
		{{?}}
	</div>
</main>