<main id="page">
	<div class="container">
		<h1>Bienvenue sur <strong>{{= it.app.title }}</strong> !</h1>

		{{? it.last_users && it.last_users.length }}
		<h2>Derniers inscrits</h2>
		<ul id="last-registered-users">
			{{~ it.last_users :user }}
			<li><a href="{{= it.app.url }}/book/{{= user.pseudo }}">{{= user.pseudo }}</a></li>
			{{~}}
		</ul>
		{{?}}

		<form action="{{= it.app.url }}/recherche">
			<fieldset>
				<legend>Rechercher un utilisateur</legend>

				<label for="user-search-pseudo">Pseudo</label>
				<input type="search" name="user[pseudo]" size="12" />
			</fieldset>
		</form>
	</div>
</main>