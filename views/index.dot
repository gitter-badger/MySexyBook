{{= it.dots._header(it.extend({ page_id: 'home' })) }}
<main id="page">
	<header id="home-landing">
		<div class="container">
			<h1>{{= it.app.slogan }}</h1>

			<h2>{{= it.app.sub_slogan }}</h2>
		</div>
	</header>

	<article id="home-content">
		<div class="container">
			{{? it.last_photos && it.last_photos.length }}
			<section>
				<h2>Derni√®res photos mises en ligne</h2>
				<ul class="users-list" id="last-uploaded-photos">
					{{~ it.last_photos :photo }}
					<li class="user">
						<a href="{{= it.app.url }}/book/{{= photo.owner.pseudo }}/{{= photo.album_id }}#photo-{{= photo._id }}">
							<picture class="user-avatar">
								<source srcset="{{= it.app.url }}/photo/{{= photo.owner_id }}/{{= photo.album_id }}/74x74x1/{{= photo.src }}" media="(max-width: 32em)" />
								<source srcset="{{= it.app.url }}/photo/{{= photo.owner_id }}/{{= photo.album_id }}/99x99x1/{{= photo.src }}" media="(max-width: 40em)" />
								<source srcset="{{= it.app.url }}/photo/{{= photo.owner_id }}/{{= photo.album_id }}/102x102x1/{{= photo.src }}" media="(max-width: 50em)" />
								<source srcset="{{= it.app.url }}/photo/{{= photo.owner_id }}/{{= photo.album_id }}/134x134x1/{{= photo.src }}" media="(max-width: 60em)" />
								<source srcset="{{= it.app.url }}/photo/{{= photo.owner_id }}/{{= photo.album_id }}/166x166x1/{{= photo.src }}" media="(max-width: 80em)" />
								<img srcset="{{= it.app.url }}/photo/{{= photo.owner_id }}/{{= photo.album_id }}/230x230x1/{{= photo.src }}" alt="" />
							</picture>
							{{? photo.owner }}
							<span class="user-pseudo">
								<span class="sr-only">Par</span> {{= photo.owner.pseudo }}
							</span>
							{{?}}
						</a>
					</li>
					{{~}}
				</ul>
			</section>
			{{?}}

			{{? it.last_users && it.last_users.length }}
			<section>
				<h2>Derniers inscrits</h2>
				<ul class="users-list" id="last-registered-users">
					{{~ it.last_users :user }}
					<li class="user">
						<a href="{{= it.app.url }}/book/{{= user.pseudo }}">
							<picture class="user-avatar">
								<source srcset="{{= it.app.url }}/avatar/74x74x1/{{= user._id }}" media="(max-width: 32em)" />
								<source srcset="{{= it.app.url }}/avatar/99x99x1/{{= user._id }}" media="(max-width: 40em)" />
								<source srcset="{{= it.app.url }}/avatar/102x102x1/{{= user._id }}" media="(max-width: 50em)" />
								<source srcset="{{= it.app.url }}/avatar/134x134x1/{{= user._id }}" media="(max-width: 60em)" />
								<source srcset="{{= it.app.url }}/avatar/166x166x1/{{= user._id }}" media="(max-width: 80em)" />
								<img srcset="{{= it.app.url }}/avatar/230x230x1/{{= user._id }}" alt="" />
							</picture>
							<span class="user-pseudo">{{= user.pseudo }}</span>
						</a>
					</li>
					{{~}}
				</ul>
			</section>
			{{?}}

			<section>
				<h2>Rechercher un profil</h2>

				{{= it.dots.search_form(it) }}
			</section>
		</div>
	</article>
</main>
{{= it.dots._footer(it) }}