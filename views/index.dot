<main id="page">
	<div class="container">
		<h1>Bienvenue sur <strong>{{= it.app.title }}</strong> !</h1>

		{{? it.last_users && it.last_users.length }}
		<ul id="last-registered-users">
			{{~ it.last_users :user }}
			<li><a href="{{= it.app.url }}/book/{{= user.name }}">{{= user.name }}</a></li>
			{{~}}
		</ul>
		{{?}}

		<form action="{{= it.app.url }}/search/" onsubmit="window.location.href = this.action + this['user_name'].value; return false;">
			<label for="user-search-name">Pseudo</label>
			<input type="search" name="user_name" id="user-search-name" size="12" />
		</form>
	</div>
</main>